<!DOCTYPE html>
<html>
  <%- include('../partials/head') %>

  <body>
    <%- include('../partials/header') %>

    <main>
      <section>
        <h1>Game Details</h1>

        <ul>
          <li>Game ID: <%= game._id %></li>
          <li>Player One: <%= game.playerOne.username %></li>
          <li>Player Two: <%= game.playerTwo.username %></li>
          <li>Turn: <%= game.turn %></li>
          <li>Status: <%= game.status %></li>
        </ul>

        <% if (game.status === 'ongoing') { %>
          <a href="/games/<%= game._id %>/update">Update Game</a>
        <% } %>
      </section>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
